                <select name="year" id="year">
                    <% for(let i=1990; i<=2000; i++){ %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>년
                 <select name="month" id="month">
                    <% for(let i=1; i<=12; i++){ %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>월
                <select name="day" id="day">
                    <% for(let i=1; i<=31; i++){ %>
                        <option value="<%= i %>"><%= i %></option>
                    <% } %>
                </select>일
            </div>
            </fieldset>

            <fieldset>
                <legend>관심사</legend>
            <div>
                여행<input type="checkbox" value="여행" name="t"/>
                패션<input type="checkbox" value="패션" name="t"/>
                음식<input type="checkbox" value="음식" name="t"/>
            </div></fieldset>
    
        <fieldset>
            <legend>선택</legend>
            좋아하는 색상 <input type="color" name="color" />
            <br />
            이메일 <input type="email" name="email" />  
        </fieldset>
        <button type="submit">회원가입</button>

        </form>
</body>
</html>